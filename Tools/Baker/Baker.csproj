<Project Sdk="Microsoft.NET.Sdk">
	<PropertyGroup>
		<OutputType>Exe</OutputType>
		<AppDesignerFolder>Properties</AppDesignerFolder>
		<TargetFramework>net8.0</TargetFramework>
		<EnableDefaultCompileItems>false</EnableDefaultCompileItems>
	</PropertyGroup>
	<PropertyGroup Condition=" '$(Configuration)|$(Platform)' == 'Debug|AnyCPU' ">
		<PlatformTarget>AnyCPU</PlatformTarget>
		<DebugType>pdbonly</DebugType>
		<DebugSymbols>true</DebugSymbols>
		<Optimize>false</Optimize>
		<DefineConstants>_DEBUG;STBSHARP_INTERNAL</DefineConstants>
		<ErrorReport>prompt</ErrorReport>
		<WarningLevel>4</WarningLevel>
	</PropertyGroup>
	<PropertyGroup Condition=" '$(Configuration)|$(Platform)' == 'Release|AnyCPU' ">
		<PlatformTarget>AnyCPU</PlatformTarget>
		<DebugType>portable</DebugType>
		<DebugSymbols>true</DebugSymbols>
		<Optimize>true</Optimize>
		<DefineConstants>NDEBUG;STBSHARP_INTERNAL</DefineConstants>
		<ErrorReport>prompt</ErrorReport>
		<WarningLevel>4</WarningLevel>
	</PropertyGroup>
	<ItemGroup>
		<Reference Include="Newtonsoft.Json">
			<HintPath>..\..\Dependencies\JsonNet\Newtonsoft.Json.dll</HintPath>
		</Reference>
		<Reference Include="MessagePack">
			<HintPath>..\..\Dependencies\build\dotnet\bin\Release\net8.0\MessagePack.dll</HintPath>
		</Reference>
		<Reference Include="StapleCore">
			<HintPath>..\..\Engine\Core\bin\Release\net8.0\StapleCore.dll</HintPath>
		</Reference>
	</ItemGroup>
	<ItemGroup>
		<PackageReference Include="StirlingLabs.Assimp.Net" Version="23.4.1" />
	</ItemGroup>
	<ItemGroup>
		<Compile Include="Baker+AppSettings.cs" />
		<Compile Include="Baker+Assets.cs" />
		<Compile Include="Baker+Audio.cs" />
		<Compile Include="Baker+Cleanup.cs" />
		<Compile Include="Baker+Material.cs" />
		<Compile Include="Baker+Meshes.cs" />
		<Compile Include="Baker+Prefabs.cs" />
		<Compile Include="Baker+Scene.cs" />
		<Compile Include="Baker+Shaders.cs" />
		<Compile Include="Baker+Texture.cs" />
		<Compile Include="Baker.cs" />
		<Compile Include="Renderer.cs" />
		<Compile Include="ShaderCompilerType.cs" />
		<Compile Include="ShaderParameter.cs" />
		<Compile Include="ShaderParameterSemantic.cs" />
		<Compile Include="ShaderPiece.cs" />
		<Compile Include="UnprocessedShader.cs" />
		<Compile Include="WorkScheduler.cs" />
	</ItemGroup>
	<PropertyGroup>
		<PostBuildEvent>
			$(SolutionDir)..\Dependencies\build\dotnet\bin\Release\net8.0\CrossCopy $(SolutionDir)Baker\bin\$(Configuration)\net8.0\*.exe $(SolutionDir)bin\
			$(SolutionDir)..\Dependencies\build\dotnet\bin\Release\net8.0\CrossCopy $(SolutionDir)Baker\bin\$(Configuration)\net8.0\*.dll $(SolutionDir)bin\
			$(SolutionDir)..\Dependencies\build\dotnet\bin\Release\net8.0\CrossCopy $(SolutionDir)..\Dependencies\JsonNet\*.dll $(SolutionDir)bin\
		</PostBuildEvent>
		<AllowUnsafeBlocks>True</AllowUnsafeBlocks>
	</PropertyGroup>
</Project>